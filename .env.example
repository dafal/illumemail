# Illumemail Configuration
# Copy this file to .env and adjust the values as needed

# Server Configuration
# Port on which the application runs
PORT=5000

# Maximum file size for uploaded .eml files (in MB)
MAX_FILE_SIZE_MB=20

# Logging Configuration
# Log level: error, warn, info, debug
# - error: Only critical errors
# - warn: Warnings and errors
# - info: General information (recommended for production)
# - debug: Detailed debugging information (for development/troubleshooting)
LOG_LEVEL=info

# Log format: json, pretty, simple
# - json: Structured JSON format (recommended for production/log aggregation)
# - pretty: Colorized output with metadata (best for development)
# - simple: Minimal console output (easiest to read)
LOG_FORMAT=json
